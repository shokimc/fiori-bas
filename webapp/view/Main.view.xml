<mvc:View xmlns:common="sap.viz.ui5.controls.common" 
    controllerName="btptest.invoices.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page">
                    <content>
                        <Panel id="_IDGenPanel1" headerText="{i18n>Selection}">
                            <Label id="labelShipName" labelFor="ShipName" text="Ship Name" class="sapUiSmallMargin"/>
                            <Input id="shipName" value="{selectionScreen>/ShipName}" width="200px" class="sapUiSmallMarginEnd"/>
                            <Label id="labelCountry" text="Country" class="sapUiSmallMargin"/>
                            <Select 
                                id="slCountry" 
                                selectedKey="{selectionScreen>/CountryKey}" 
                                items="{selectionScreen>/Countries}">
                                <items>
                                    <core:Item id="_IDGenItem1" key="{selectionScreen>key}" text="{selectionScreen>text}"/>
                                </items>
                            </Select>
                            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://filter" press="onFilter" class="sapUiSmallMarginEnd"></Button>
                            <Button id="btnClearFilter" text="{i18n>btnClearFilters}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"></Button>
                        </Panel>
                        <Panel id="_IDGenPanel2">
                        <List id="invoicesList"
                        headerText="{i18n>invoiceHeaderList}"
                        class="sapUiResponsiveMargin"
                        width="auto"
                        items="{/Invoices}">
                        <items>
                            <ObjectListItem id="_IDGenObjectListItem1" 
                                            title="{ShipName} - {Country}"
                                            number="{ parts: [ {path:'ExtendedPrice'}, {path:'selectionScreen>/Currency'}],
                                            type:'sap.ui.model.type.Currency', formatOptions:{ showMeasure: false} }"
                                            numberUnit="{selectionScreen>/Currency}"
                                            numberState="{= ${ExtendedPrice} > 100 ? 'Success' : 'Warning'}">
                            </ObjectListItem>
                        </items>
                        </List>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>    
    </Shell>
</mvc:View>
